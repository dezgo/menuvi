[Unit]
Description=MenuVi Gunicorn Service
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/opt/menuvi
EnvironmentFile=/opt/menuvi/.env
ExecStart=/opt/menuvi/.venv/bin/gunicorn "menuvi:create_app()" \
    --bind 127.0.0.1:8000 \
    --workers 2 \
    --timeout 30 \
    --access-logfile /var/log/menuvi/access.log \
    --error-logfile /var/log/menuvi/error.log
ExecReload=/bin/kill -s HUP $MAINPID
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
